elif args.command == "slots":

    for kind, name, obj in helper.getKindNameAndObject(args.extraArgs):
        github_utils.dumpSlots(obj, kind)
        pass
    pass

elif args.command == "values":

    for kind, name, obj in helper.getKindNameAndObject(args.extraArgs):
        github_utils.dumpSlotValues(obj, kind)
        pass
